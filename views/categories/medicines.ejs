<%- include('../layout/header') %>
<h1>Medicines</h1>
<link rel="stylesheet" href="/css/style.css" />
<% if (products && products.length > 0) { %>
  <div class="product-grid">
    <% products.forEach(product => { %>
      <div class="product-card">
        <img src="<%= product.images && product.images[0] ? product.images[0] : '/images/default.jpg' %>" alt="<%= product.name %>" />
        <h2><%= product.name %></h2>
        <p>â‚¹<%= product.price %></p>
        <p><%= product.description %></p>
        <form action="/cart/add" method="POST">
          <input type="hidden" name="productId" value="<%= product._id %>" />
          <button type="submit">Add to Cart</button>
        </form>
        <form action="/wishlist/add" method="POST">
          <input type="hidden" name="productId" value="<%= product._id %>" />
          <button type="submit" class="wishlist-btn">Add to Wishlist</button>
        </form>
        <div class="stock-info">Stock left: <%= product.stockCount || product.stock || 0 %></div>
      </div>
    <% }) %>
  </div>
<% } else { %>
  <div style="text-align:center;padding:48px 0;">
    <img src="/images/empty-box.png" alt="No products" style="width:120px;opacity:0.7;margin-bottom:18px;" />
    <h2 style="color:#888;font-weight:500;">No products found in this category</h2>
    <p style="color:#aaa;">Please check back later or explore other categories.</p>
  </div>
<% } %>
 