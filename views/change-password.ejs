<%- include('layout/header') %>
<main class="change-password-main" style="max-width:420px;margin:40px auto;background:#fff;padding:32px 28px;border-radius:12px;box-shadow:0 2px 16px rgba(0,0,0,0.07);">
  <h1 style="font-size:2rem;font-weight:700;margin-bottom:18px;">Change Password</h1>
  <% if (typeof error !== 'undefined') { %>
    <div style="color:#d32f2f;font-weight:500;margin-bottom:12px;"> <%= error %> </div>
  <% } %>
  <% if (typeof success !== 'undefined') { %>
    <div style="color:#219150;font-weight:500;margin-bottom:12px;"> <%= success %> </div>
  <% } %>
  <form action="/change-password" method="POST">
    <div style="margin-bottom:18px;">
      <label for="oldPassword" style="display:block;font-weight:500;margin-bottom:6px;">Old Password:</label>
      <input type="password" id="oldPassword" name="oldPassword" required style="width:100%;padding:8px 10px;border-radius:6px;border:1px solid #ccc;">
    </div>
    <div style="margin-bottom:18px;">
      <label for="newPassword" style="display:block;font-weight:500;margin-bottom:6px;">New Password:</label>
      <input type="password" id="newPassword" name="newPassword" required style="width:100%;padding:8px 10px;border-radius:6px;border:1px solid #ccc;">
    </div>
    <button type="submit" style="width:100%;background:#219150;color:#fff;font-weight:600;padding:10px 0;border:none;border-radius:6px;font-size:1.1rem;cursor:pointer;transition:background 0.2s;">Change Password</button>
  </form>
</main>
