<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>DailyShop - Home</title>
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <header class="hero">
    <h1>Welcome to DailyShop</h1>
    <p>Your One-Stop Shop for Daily Essentials</p>
  </header>
  <main class="container">
    <section class="categories">
      <% const categories = [
        { name: 'Medicines', slug: 'medicines', image: '/images/medicines.jpg' },
        { name: 'Home Needs', slug: 'home-needs', image: '/images/home-needs.jpg' },
        { name: 'Kitchen Items', slug: 'kitchen', image: '/images/kitchen.jpg' },
        { name: 'Clothes', slug: 'clothes', image: '/images/clothes.jpg' },
        { name: 'Books', slug: 'books', image: '/images/books.jpg' },
        { name: 'Stationery', slug: 'stationery', image: '/images/stationery.jpg' },
        { name: 'Electronics', slug: 'electronics', image: '/images/electronics.jpg' }
      ]; %>

      <% categories.forEach(category => { %>
        <a href="/category/<%= category.slug %>" class="category-card">
          <img src="<%= category.image %>" alt="<%= category.name %>" class="category-image" />
          <div class="category-name"><%= category.name %></div>
        </a>
      <% }); %>
    </section>
  </main>

  <footer class="footer">
    <p>&copy; 2024 DailyShop. All rights reserved.</p>
  </footer>
</body>
</html>

