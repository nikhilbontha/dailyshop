<%- include('layout/header') %>
<main class="wishlist-main" style="max-width:700px;margin:0 auto;padding:32px 0;">
  <h1 style="font-size:2rem;font-weight:700;margin-bottom:18px;">My Wishlist</h1>
  <% if (wishlist.length === 0) { %>
    <div style="color:#888;font-size:1.1rem;">Your wishlist is empty.</div>
  <% } else { %>
    <ul style="list-style:none;padding:0;">
      <% wishlist.forEach(function(item) { %>
        <li style="background:#fff;border-radius:8px;box-shadow:0 2px 8px rgba(0,0,0,0.07);padding:18px 16px;margin-bottom:16px;display:flex;justify-content:space-between;align-items:center;">
          <span style="font-weight:500;font-size:1.1rem;"><%= item.name %></span>
          <span style="color:#219150;font-weight:600;">â‚¹<%= item.price %></span>
        </li>
      <% }) %>
    </ul>
  <% } %>
</main>
<%- include('layout/footer') %>
